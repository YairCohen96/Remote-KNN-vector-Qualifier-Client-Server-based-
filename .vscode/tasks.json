{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/DistanceCalc.cpp",
                "${fileDirname}/KnnCalc.cpp",
                "${fileDirname}/Validation.cpp",
                "${fileDirname}/CommandOne.cpp",
                "${fileDirname}/CommandTwo.cpp",
                "${fileDirname}/CommandThree.cpp",
                "${fileDirname}/CommandFour.cpp",
                "${fileDirname}/CommandFive.cpp",
                "${fileDirname}/CommandEight.cpp",
                "${fileDirname}/StandardIO.cpp",
                "${fileDirname}/CLI.cpp" ,
                "${fileDirname}/SocketIO.cpp" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}